{
  "manifest_version": 3,
  "name": "Twitter Mass Unfollow",
  "version": "1.0",
  "description": "Safely unfollow Twitter accounts in bulk",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ]
}